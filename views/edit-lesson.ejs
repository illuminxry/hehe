<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Edit Lesson</title>
    </head>

    <body>
        <h2>View Lesson</h2>
        <form action="/lesson/edit/<%= lesson.ID %>" method="post">
            <p name="id" id="id">ID: <%= lesson.ID %></p> 
            <input type="hidden" name="id" value="<%= lesson.ID %>">

            <label for="lessonID">Lesson ID:</label>
            <input type="text" name="lessonID" id="lessonID" value="<%= lesson.lessonID %>">
            <br>

            <label for="subjectname">Subject Name:</label>
            <input type="text" name="subjectname" id="subjectname" value="<%= lesson.subjectname %>">
            <br>

            <label for="quarterID">Quarter ID:</label>
            <select name="quarterID" id="quarterID">
                <option value="" disabled selected>Choose an Option</option>
                <option value="1">1st Quarter</option>
                <option value="2">2nd Quarter</option>
                <option value="3">3rd Quarter</option>
                <option value="4">4th Quarter</option>
            </select>
            <br>

            <label for="section1">Section 1:</label>
            <input type="text" name="section1" id="section1" value="<%= lesson.section1 %>">
            <br>

            <label for="section2">Section 2:</label>
            <input type="text" name="section2" id="section2" value="<%= lesson.section2 %>">
            <br>

            <label for="section3">Section 3:</label>
            <input type="text" name="section3" id="section3" value="<%= lesson.section3 %>">
            <br>

            <label for="section4">Section 4:</label>
            <input type="text" name="section4" id="section4" value="<%= lesson.section4 %>">
            <br>

            <label for="section5">Section 5:</label>
            <input type="text" name="section5" id="section5" value="<%= lesson.section5 %>">
            <br>

            <label for="section6">Section 6:</label>
            <input type="text" name="section6" id="section6" value="<%= lesson.section6 %>">
            <br>

            <label for="section7">Section 7:</label>
            <input type="text" name="section7" id="section7" value="<%= lesson.section7 %>">
            <br>

            <label for="section8">Section 8:</label>
            <input type="text" name="section8" id="section8" value="<%= lesson.section8 %>">
            <br>

            <label for="section9">Section 9:</label>
            <input type="text" name="section9" id="section9" value="<%= lesson.section9 %>">
            <br>

            <label for="section10">Section 10:</label>
            <input type="text" name="section10" id="section10" value="<%= lesson.section10 %>">
            <br>

            <!-- Add dateCreated input -->
            <label for="dateCreated">Date Created:</label>
            <input type="date" name="dateCreated" id="dateCreated"
                value="<%= lesson.dateCreated.toISOString().split('T')[0] %>">
            <br>

            <!-- Add dateAvailableUntil input -->
            <label for="dateAvailableUntil">Date Available Until:</label>
            <input type="date" name="dateAvailableUntil" id="dateAvailableUntil"
                value="<%= lesson.dateAvailableUntil.toISOString().split('T')[0] %>">
            <br>

            <label for="published">Published:</label>
            <select name="published" id="published">
                <option value="" disabled></option>
                <option value="Publish">Publish</option>
                <option value="Unpublish">Unpublish</option>
            </select>
           <br>

            <input type="submit" value="Submit">
        </form>
    </body>

</html>

